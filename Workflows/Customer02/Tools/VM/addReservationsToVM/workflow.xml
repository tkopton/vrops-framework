    <display-name><![CDATA[setAllocation]]></display-name>
    <script encoded="false"><![CDATA[var configSpec = new VcVirtualMachineConfigSpec();
	configSpec.cpuAllocation = new VcResourceAllocationInfo();
	configSpec.cpuAllocation.shares = new VcSharesInfo();
	configSpec.memoryAllocation = new VcResourceAllocationInfo();
	configSpec.memoryAllocation.shares = new VcSharesInfo();

// calulate actual values	
var cpuReservationHz = ((cpuCores * cpuSpeed)/100) * cpuReservationPercent; 
var memoryReservationMB = (memMB / 100) * memReservationPercent; 




configSpec.cpuAllocation.shares.level = VcSharesLevel.fromString(cpuSharesLevel) ;
configSpec.cpuAllocation.reservation = cpuReservationHz;
configSpec.memoryAllocation.shares.level = VcSharesLevel.fromString(memSharesLevel) ;
configSpec.memoryAllocation.reservation = memoryReservationMB;

var task = vcvm.reconfigVM_Task( configSpec );
