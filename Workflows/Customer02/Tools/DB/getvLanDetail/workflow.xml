    <display-name><![CDATA[Get Vlan Detail]]></display-name>
    <script encoded="false"><![CDATA[sqlStatement="SELECT * FROM Network WHERE  VLANID='" + vlanID + "';";
var main = new JDBCConnection();
var con;
var returnValue;
try  {
	con = main.getConnection( JDBCString, DBUser, DBUserPassword );
	var stat = con.createStatement();
	var results = stat.executeQuery( sqlStatement );
	
	results.next();
	vlanGate = results.getStringAt(8);
	startip= results.getStringAt(9);
	endip= results.getStringAt(10);
	vlanFQDN= results.getStringAt(5);
	stat.close();
	
	//getbase IP
	temp=vlanGate.split(".");
	temp.pop();
	baseip=temp.join(".");
	vlanStartIP=baseip+"."+startip;
	vlanEndIP=baseip+"."+endip;
}
catch( ex )  {
	throw "Connection to database failed (Reason: " + ex + ")";
} finally {
	if (con) {
		con.close();
	}
	System.warn(returnValue);
}

]]></script>
