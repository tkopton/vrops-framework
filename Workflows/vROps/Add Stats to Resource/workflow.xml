    <display-name><![CDATA[Add Properties]]></display-name>
    <script encoded="false"><![CDATA[var content = {
	"stat-content" : []
};
var timestamp = (new Date()).getTime();

for each (var stat in stats)
{
	var statKey = stat.get("statKey");
	var data = stat.get("data");
	var statContent = createStatContent(statKey, data, timestamp);
	content["stat-content"].push(statContent);
}

var params = [resourceId];	
System.log("Adding stats... " + JSON.stringify(content));
var request = addStats.createRequest(params, JSON.stringify(content));
System.log("Content type: " + request.contentType);
System.log("Full URL: " + request.fullUrl);
var response = request.execute();

if(response.statusCode >= 400) {
	throw "HTTPError: status code: " + response.statusCode;
}

function createStatContent(statKey, values, timestamp)
{
	var statContent = {
    	"statKey" : statKey,
    	"timestamps" : [timestamp],
    	"data" : [values]	
  	};

	return statContent;
}

]]></script>
